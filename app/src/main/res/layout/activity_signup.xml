<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan500"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="24dp" >

    <ImageView
        android:id="@+id/iv_signUp_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_et1"
        android:padding="8dp" >

        <EditText
            android:id="@+id/et_signUp_phone"
            style="@style/style_editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_signUp_delete"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <ImageView
            android:id="@+id/iv_signUp_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_et1"
        android:padding="8dp" >

        <EditText
            android:id="@+id/et_signUp_code"
            style="@style/style_editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_change_phone_getCode"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <TextView
            android:id="@+id/tv_signUp_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn1"
            android:padding="5dp"
            android:text="获取验证码" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_signUp_next"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn1"
        android:text="@string/next"
        android:textSize="@dimen/textSize4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="———————— 其他方式登录 ————————"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp" >

        <ImageView
            android:id="@+id/iv_signUp_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/sina" />

        <ImageView
            android:id="@+id/iv_signUp_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/alipay2" />

        <ImageView
            android:id="@+id/iv_signUp_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/wechat2" />

    </RelativeLayout>

</LinearLayout>