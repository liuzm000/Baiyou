<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/teamName"
            android:textColor="@color/black_translucent_b"
            android:textSize="@dimen/textSize5" />

        <TextView
            android:id="@+id/tv_team_infomation_teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/zhanwei"
            android:textColor="@color/black_translucent_7"
            android:textSize="@dimen/textSize5" />
    </FrameLayout>

    <View style="@style/style_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/set_top"
            android:textColor="@color/black_translucent_b"
            android:textSize="@dimen/textSize5" />

        <Switch
            android:id="@+id/sw_team_infomation_isSetTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

    <View style="@style/style_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/group" />

        <TextView
            android:id="@+id/tv_group_infomation_memCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/right_arrow"
            android:text="40位成员"
            android:textColor="@color/black_translucent_7"
            android:textSize="@dimen/textSize5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/tv_group_infomation_memCount"
            android:layout_toRightOf="@+id/imageView1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_team_infomation_mem1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_team_infomation_mem2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_team_infomation_mem3"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_team_infomation_mem4"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/root_team_infomation_chatRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/groupChat"
            android:textColor="@color/black_translucent_b"
            android:textSize="@dimen/textSize5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:drawableRight="@drawable/right_arrow"
            android:textColor="@color/black_translucent_7"
            android:textSize="@dimen/textSize5" />
    </FrameLayout>

    <View style="@style/style_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/plan_fee"
            android:textColor="@color/black_translucent_b"
            android:textSize="@dimen/textSize5" />

        <TextView
            android:id="@+id/tv_team_infomation_planFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/zhanweiN"
            android:textColor="@color/black_translucent_7"
            android:textSize="@dimen/textSize5" />
    </FrameLayout>

    <View style="@style/style_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/group_disturb"
            android:textColor="@color/black_translucent_b"
            android:textSize="@dimen/textSize5" />

        <Switch
            android:id="@+id/sw_team_infomation_isDisturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

    <View style="@style/style_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groupIntroduce"
            android:textColor="@color/black_translucent_b"
            android:textSize="@dimen/textSize5" />

        <TextView
            android:id="@+id/tv_team_infomation_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/zhanwei"
            android:textColor="@color/black_translucent_7"
            android:textSize="@dimen/textSize6" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_team_infomation_deleteAndExit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:text="@string/delete_exit"
            android:textColor="@color/red"
            android:textSize="@dimen/textSize4" />
    </FrameLayout>

</LinearLayout>