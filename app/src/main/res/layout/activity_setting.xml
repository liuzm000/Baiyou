<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/fl_setting_modifyPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <TextView
                    style="@style/style_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/modify_passowrd" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/right_arrow" />
            </FrameLayout>

            <View style="@style/style_line" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <TextView
                    style="@style/style_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/setting_text2" />

                <Switch
                    android:id="@+id/sw_setting_showDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:checked="true" />

            </FrameLayout>

            <View style="@style/style_line" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <TextView
                    style="@style/style_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/clear_cache" />

                <TextView
                    android:id="@+id/tv_setting_cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="2.00MB"
                    android:textColor="@color/black_translucent_7"
                    android:textSize="@dimen/textSize7" />

            </FrameLayout>

            <View style="@style/style_line" />

            <FrameLayout
                android:id="@+id/fl_setting_checkNet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <TextView
                    style="@style/style_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/net_check" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/right_arrow" />
            </FrameLayout>

            <View style="@style/style_line" />

            <FrameLayout
                android:id="@+id/fl_setting_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <TextView
                    style="@style/style_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/setting_text1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/right_arrow" />
            </FrameLayout>

            <View style="@style/style_line" />

            <FrameLayout
                android:id="@+id/fl_setting_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <TextView
                    style="@style/style_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/about" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/right_arrow" />
            </FrameLayout>

            <View style="@style/style_line" />
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_setting_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:text="@string/logout"
            android:textColor="@color/red"
            android:textSize="@dimen/textSize7" />

    </FrameLayout>

</LinearLayout>